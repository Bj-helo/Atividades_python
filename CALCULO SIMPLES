dados1 = input().split()
peca1 = int(dados1[0]) 
numero_peca1 = int(dados1[1]) 
valor_uni1 = float(dados1[2])


dados2 = input().split()
peca2 = int(dados2[0])
numero_peca2 = int(dados2[1]) 
valor_uni2 = float(dados2[2])

total = (numero_peca1 * valor_uni1) + (numero_peca2 * valor_uni2)
print(f"VALOR A PAGAR: R$ {total:.2f}")
